{
  "name": "asset",
  "plural": "assets",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true,
      "default": "Bitcoin",
      "unique": true
    },
    "hidden": {
      "type": "boolean",
      "default": false
    },
    "ticker": {
      "type": "string",
      "required": true,
      "default": "btc",
      "unique": true
    },
    "minPurchaseAmount": {
      "type": "number",
      "required": false,
      "default": 0.0,
      "postgresql": {
        "columnName": "minPurchaseAmount",
        "dataType": "NUMERIC(15,5)"
      }
    },
    "maxPurchaseAmount": {
      "type": "number",
      "required": true,
      "default": 0.0,
      "postgresql": {
        "columnName": "maxPurchaseAmount",
        "dataType": "NUMERIC(15,5)"
      }
    },
    "minSaleAmount": {
      "type": "number",
      "required": false,
      "default": 0.0,
      "postgresql": {
        "columnName": "minSaleAmount",
        "dataType": "NUMERIC(15,5)"
      }
    },
    "maxSaleAmount": {
      "type": "number",
      "required": false,
      "default": 1000.0,
      "postgresql": {
        "columnName": "maxSaleAmount",
        "dataType": "NUMERIC(15,5)"
      }
    },
    "buyMargin": {
      "type": "number",
      "required": false,
      "default": 0,
      "postgresql": {
        "columnName": "buyMargin",
        "dataType": "NUMERIC(10,5)"
      }
    },
    "saleMargin": {
      "type": "number",
      "required": false,
      "default": 0,
      "postgresql": {
        "columnName": "saleMargin",
        "dataType": "NUMERIC(10,5)"
      }
    },
    "indivisibleQuantity": {
      "type": "number",
      "required": false,
      "default": 0,
      "postgresql": {
        "dataType": "NUMERIC(30)"
      }
    },
    "createdAt": {
      "type": "date",
      "defaultFn": "now",
      "postgresql": {
        "columnName": "createdAt"
      }
    },
    "updatedAt": {
      "type": "date",
      "required": false,
      "defaultFn": "now",
      "postgresql": {
        "columnName": "updatedAt"
      }
    }, 
    "exchangeRates":{
      "type": "Object",
      "postgresql": {
        "columnName": "exchangeRates"
      }
    },
    "scalar": {
      "type": "number",
      "postgresql": {
        "dataType": "NUMERIC(30)"
      }
    }
  },
  "validations": [],
  "relations": {
    "wallets": {
      "foreignKey": "assetId",
      "primaryKey": "ticker",
      "model": "wallet",
      "type": "hasMany"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "super_admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {},
  "mixins": {
    "SetupRemoteMethods": {
      "disableAllExcept": [
        "create",
        "find",
        "findById",
        "prototype.patchAttributes",
        "communityAssets"
      ]
    }
  }
}
